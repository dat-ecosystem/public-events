<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{{ title }}</title>
        <link rel="stylesheet" href="{{ '/assets/normalize.css' | url }}">
        <link rel="stylesheet" href="{{ '/assets/index-2020.css' | url }}">
        {% if cssFiles %}
        {% for cssFile in cssFiles %}
        <link rel="stylesheet" href="{{ cssFile | url }}">
        {% endfor %}
        {% endif %}
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script type="text/javascript" src="{{ '/assets/luxon.min.js' | url }}"></script>
        <script type="text/javascript" src="{{ '/assets/calendar.js' | url }}"></script>
        <meta property="og:title" content="Dat Conference 2020"/>
        <meta property="og:description" content="Virtual peer to peer event about local-first tech and meetup space for everyone interested in the decentralized web."/>
        <meta property="og:url" content="https://events.dat.foundation/2020/"/>
        <meta property="og:site_name" content="Dat Conference 2020"/>
        <meta property="og:image" content="https://events.dat.foundation/assets/bg-sns-card.png"/>
        <meta property="og:type" content="website"/>
        <meta name="twitter:title" content="Dat Conference 2020" />
        <meta name="twitter:image" content="https://events.dat.foundation/assets/bg-sns-card.png" />
        <meta name="twitter:url" content="https://events.dat.foundation/2020/" />
        <meta name="twitter:card" content="summary_large_image" />
    </head>
    <body class="conference{% if splash_img %} darkbg{%endif%} page-{{ page.fileSlug }}">
      <header>
        <a id="menu-dat-link" href="/" aria-label="Dat events index" style="margin:0"></a>
        <nav id="menu">
          {% for entry in 2020.nav %}
            {% if entry.slug == page.fileSlug %}
            <div class="menu-link menu-link-{{ entry.skug }} menu-link-inactive">
              <span>{{ entry.title }}</span>
            </div>
            {% else %}
            <a href="{{ entry.href | url }}" class="menu-link menu-link-{{ entry.skug }} menu-link-active">{{ entry.title }}</a>
            {% endif %}
          {% endfor %}
        </nav>
        {{ header_title }}
      </header>
      {% if splash_img %}
        <div class="splash" style="background-image: url({{splash_img|escape }})">
        {{ splash_text | md }}
        </div>
      {% endif %}
      <main>
        {{ content }}
      </main>
  </body>
</html>
